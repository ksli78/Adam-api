# Use standard Docling by default (fast). Set to 1 only if a scan/tables need VLM OCR.
DOCLING_USE_VLM=0

# App basics
APP_ENV=development
LOG_LEVEL=DEBUG
PORT=8000
HOST=127.0.0.1

# If your API talks to Ollama locally:
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=granite4
OLLAMA_TIMEOUT_S=90

# Example RAG paths (adjust to your structure)
DATA_DIR=./data
VECTOR_DB_DIR=./vectorstore
HF_HOME=.hf
HF_HUB_DISABLE_SYMLINKS=1
HF_HUB_DISABLE_SYMLINKS_WARNING=1